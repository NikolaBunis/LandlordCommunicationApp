<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.ChatScreen.ChatScreenFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_selector"
            android:layout_above="@+id/typeMessage_EditText"/>

        <EditText
            android:id="@+id/typeMessage_EditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#000000"
            android:hint="type your message"
            android:textColorHint="#c2c9d3"
            android:textColor="#ffff"
            android:inputType="text"
            android:imeOptions="actionSend"/>

        <io.github.yavski.fabspeeddial.FabSpeedDial
            android:id="@+id/predefined_messages_Fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabGravity="bottom_end"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:fabMenu="@menu/fab_predefined_messages_menu"
            app:miniFabBackgroundTint="@android:color/white"
            app:miniFabDrawableTint="?attr/colorPrimaryDark"
            app:miniFabTitleTextColor="?attr/colorPrimaryDark" />


    </RelativeLayout>
</FrameLayout>